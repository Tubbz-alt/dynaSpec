library(imager)


file <- system.file('extdata/parrots.png',package='imager')
#system.file gives the full path for a file that ships with a R package
#if you already have the full path to the file you want to load just run:
#im <- load.image("/somedirectory/myfile.png")
parrots <- load.image(file)

plot(im)

im <- grayscale(parrots)

deriche(im,sigma=4,order=2,axis="y") %>% plot(main="2nd deriv of Gaussian along y")

class(im)

library(seewave)
data(tico)

im2 <- spectro(tico, plot = FALSE)

png(filename = file.path(tempdir(), "delete.png"))

par(mar = rep(0, 4))
spectro(tico, palette = reverse.gray.colors.1, grid = FALSE, scale = FALSE, collevels = seq(-50, 0, 5), wl = 300, flim = c(1, 8))

dev.off()

tc <- load.image(file.path(tempdir(), "delete.png"))

plot(im)

im <- grayscale(tc)
str(im)

png(filename = file.path(tempdir(), "delete.der.png"))

par(mar = rep(0, 4))

der.im <- deriche(im, sigma = 3, order = 2, axis="y") 

plot(der.im)

dev.off()

